<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_withdraw">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:includeFontPadding="false"
                android:text="可提现金币"
                android:textColor="@color/white"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tv_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:includeFontPadding="false"
                android:text="500"
                android:textColor="@color/white"
                android:textSize="24sp"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:text="请选择提现方式"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/ll_ali"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/ic_ali_pay"/>

                <View
                    android:id="@+id/view_ali"
                    android:layout_width="18dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_line_bottom"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_wxchat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/ic_wx_pay"/>

                <View
                    android:id="@+id/view_wx"
                    android:layout_width="18dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_line_bottom"
                    android:visibility="invisible"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E5E5E5"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_FBFBFB">

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:includeFontPadding="false"
                android:text="您还未绑定提现账号哦"
                android:textColor="@color/color_333333"
                android:textSize="15sp"
                />

            <com.yu.common.ui.DelayClickTextView
                android:id="@+id/tv_bind"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingRight="19dp"
                android:text="立即绑定"
                android:textColor="@color/color_9897E7"
                android:textSize="15sp"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_E5E5E5"/>

        <com.yu.common.ui.NoSlidingGridView
            android:id="@+id/gv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:includeFontPadding="false"
                android:text="所需金币"
                android:textColor="@color/color_666666"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:includeFontPadding="false"
                android:text="@string/text_null"
                android:textColor="@color/color_9897E7"
                android:textSize="15sp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:background="@color/color_E5E5E5"/>


        <com.yu.common.ui.DelayClickTextView
            android:id="@+id/tv_commit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="39dp"
            android:background="@drawable/shape_authentication"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="立即兑换"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

    </LinearLayout>

</ScrollView>
