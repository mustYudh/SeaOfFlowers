<?xml version="1.0"?>
<template
    format="5"
    revision="6"
    name="MVP-Plug"
    description="自动生成MVP Fragment模板，支持Kotlin"
    minApi="14"
    minBuildApi="25">

    <dependency name="android-support-v4" revision="8" />

    <category value="MVP FenXiao Fragment" />
    <formfactor value="Mobile" />

    <parameter
        id="fragmentClass"
        name="Fragment Name (自动加'Fragment')"
        type="string"
        constraints="class|unique|nonempty"
        default="New"
        help="The name of the fragment class to create" />

    <parameter
        id="layoutName"
        name="Layout Name (自动加'_view')"
        type="string"
        constraints="layout|unique|nonempty"
        suggest="${fragmentToLayout(fragmentClass)}"
        default="fragment_"
        help="The name of the layout to create for the fragment" />

    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp" />
        
    <thumbs>
        <thumb>template_login_activity.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
